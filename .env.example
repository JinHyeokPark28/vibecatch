# VibeCatch Environment Configuration

# ===================================
# AI (Required for summarization)
# ===================================
ANTHROPIC_API_KEY=your_api_key_here

# ===================================
# Database
# ===================================
DATABASE_PATH=vibecatch.db

# ===================================
# Collection Settings
# ===================================
HN_FETCH_COUNT=30
REDDIT_FETCH_COUNT=20
GITHUB_FETCH_COUNT=20

# ===================================
# Scheduler
# ===================================
# Enable/disable automatic collection
SCHEDULER_ENABLED=true

# Collection interval in hours (default: 6)
COLLECT_INTERVAL_HOURS=6
